<!DOCTYPE html>
<html lang="en">
  <head>

    <title>UMass Bookshare Login</title>
    <% include includes/header.ejs %>
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css"/>

    <script type="text/javascript">
      $(document).ready(function(){
        var user,pass;
        $("#submit").click(function(){
          user=$("#email").val();
          pass=$("#password").val();
          $.post("/",{user: user,password: pass}, function(data){
            if(data==='done')
              {
                alert("login success");
              }
          });
        });
      });
    </script>

  </head>

	<body>
		<% include partials/navbar.ejs %>
    
		<div class="container">
		    <div class="row">
		        <div class="col-sm-6 col-md-4 col-md-offset-4">
		        	<h1 class="text-center welcome">Welcome to UMass Bookshare</h1>
		            <h1 class="text-center login-title">Log in to your account</h1>
		            <div class="account-wall">
		                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
		                    alt="">
		                <form class="form-signin">
  		                <input type="text" class="form-control" id="email" placeholder="Email" required autofocus>
  		                <input type="password" class="form-control" id="password" placeholder="Password" required>
  		                <a class="btn btn-md btn-primary btn-block" href="/profile" id="submit" type="submit">
  		                    Sign in
  		                </a>
  		                <div>
    		                <label class="checkbox pull-left">
    		                  <input type="checkbox" value="remember-me">
    		                	Remember me
    		                </label>

    		                <!-- <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span> -->
  		           		 </div>
		                </form>
		            </div>
		            <a href="/registration" class="text-center new-account">Create an account </a>
		        </div> <!--col-sm-6 col-md-4 col-md-offset-4-->
		    </div> <!--row-->
		</div> <!--container-->

    <% include includes/footer.ejs %>
</body></html>