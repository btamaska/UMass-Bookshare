    <script type="text/javascript">
      $(document).ready(function(){
        var user,pass,fname,lname,email,phone,school;
        $("#submit").click(function(){
          user=$("#username").val();
          pass=$("#password").val();
          fname=$("#firstName").val();
          lname=$("#lastName").val();
          email=$("#email").val();
          phone=$("#phone").val();
          school=$("#institution").val();
          $.post("/profile",{user: user,password: pass,fname: fname, lname: lname, 
            email: email, phone: phone, school: school}, function(data){
            if(data==='done')
              {
                alert("login success");
              }
          });
        });
      });
    </script>

