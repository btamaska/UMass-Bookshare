<!-- views/login.ejs -->
<!DOCTYPE html>
<html><head>
	<title>Login</title>
	<% include includes/header.ejs %>
	<!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> --> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<link href="/stylesheets/style.css" rel="stylesheet" type="text/css"/>
	<link href="/stylesheets/login.css" rel="stylesheet" type="text/css"/>
</head>

<body>
	<% include partials/navbar.ejs %>
	<div class="container-fluid">
			<div class="col-sm-8 col-md-6 col-md-offset-3">
				<h2 class="text-center welcome">Welcome to UMass Bookshare</h2>
			</div>

			<!--Homepage stuff-->
	        <div class="col-sm-6 col-md-4 col-md-offset-4">
				<h2><span class="fa fa-sign-in"></span> Login</h2>
				<!-- show any messages that come back with authentication -->
			    <% if (message.length > 0) { %>
			        <div class="alert alert-danger"><%= message %></div>
			    <% } %>

				<!-- LOGIN FORM -->
				<form class="form-signin" action="/" method="post">
					<div class="form-group col-sm-14">
						<label>Username</label>
						<input type="text" class="form-control" name="username" placeholder="Username">
					</div>

					<div class="form-group col-sm-14">
						<label>Password</label>
						<input type="password" class="form-control" name="password" placeholder="Password">
					</div>

					<button type="submit" class="form-control btn btn-warning btn-md">Login</button>

					<div class="form-group col-sm-14">
		                <label class="checkbox pull-left">
		                	<!--Change function to "Keep me signed in"-->
		                  <input type="checkbox" value="remember-me">Remember me
		                </label>
		                <!-- fix href and implement password retrieval-->
		                <a href="#" class="need-help pull-right">Need help?</a><span class="clearfix"></span>
	       		 	</div>

					<div class="form-group col-sm-14">
	       		 		<p>Don't have an account? <a href="/signup">Signup here</a></p>
	       		 	</div>
				</form>

			</div> <!-- col-sm-6 col-md-4 col-md-offset-4 -->
		<!-- </div> --> <!-- row -->
	</div> <!-- container-fluid-->

	<% include includes/footer.ejs %>
</body></html>