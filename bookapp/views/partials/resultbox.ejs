<div class="col
-sm-4 col-lg-4 col-md-4">
  <div class="thumbnail">
    <img src="/homepage_files/320x150">
    <div class="caption">

    <!-- Need listibg-books join to get titel and author -->
      <h5><b><%= data.title %></b>
        <br>(Edition: <%=data.version%>)
        <br>by <%= data.author %>
      </h5>

      <h6><%= "ISBN-13: " + data.isbn13 %>
        <!--links to seller profile -->
        <br>Posted by: <%=data.username%>
      <h6>

      <h5>
      <% if(data.available === false) { %>
          <%= "This book is currently not available." %>
        <% } else {%>
          <%= "Selling Price: $"+data.sellprice %>
        <br><%= "Rent Price: $"+data.rentprice %>
        <% } %>
      </h5>

      <!-- TODO: only show snippet -->
      <p>
        <% if(data.description === null) { %>
          <%= "Description: No description." %>
        <% } else {%>
          <%= "Description: " + data.description %>
        <% } %>
      </p>


      <!-- view seller button-->
      <p>
        <form action="/sellerprofile" method="post">
          <button type="submit" class="form-control btn btn-info btn-sm">View Seller</button>
          <input type="hidden" name="seller" value="<%=data.username%>">
        </form>
      </p>

    </div> <!-- caption -->

